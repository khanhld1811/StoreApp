<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="Nhận xét:"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnToComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        android:text="Viết nhận xét" />

    <LinearLayout
        android:id="@+id/llctnComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:paddingBottom="@dimen/dimenPaddingVertical_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0.5dp"-->
<!--        android:background="@color/colorGrey" />-->

    <TextView
        android:id="@+id/txt_view_comment_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimenPaddingVertical_16dp"
        android:paddingTop="@dimen/dimenPaddingVertical_16dp"
        android:text="@string/view_all"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:gravity="center" />
</LinearLayout>